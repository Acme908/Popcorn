<UserControl
    x:Class="Popcorn.UserControls.Home.Show.Details.ShowDetailsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Popcorn.UserControls.Home.Show.Details"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding ShowDetails, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <Image Source="{Binding Show.Images.Banner}" Stretch="UniformToFill" />
    </Grid>
</UserControl>
